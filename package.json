{
  "scripts": {
    "js:lint": "eslint assets/scripts/**/*.js",
    "js:lint:fix": "eslint assets/scripts/**/*.js --fix",
    "css:lint": "stylelint assets/styles/**/*.scss",
    "css:lint:fix": "stylelint assets/styles/**/*.scss --fix",
    "dev:css": "sass assets/styles/scss/main.scss:assets/styles/main.css",
    "watch:sass": "sass --watch asstes/styles/scss styles/scss/main.scss:assets/styles/main.css",
    "watch": "npm-run-all --parallel dev:css watch:*"
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.53.0",
    "stylelint": "^14.9.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0"
  }
}
